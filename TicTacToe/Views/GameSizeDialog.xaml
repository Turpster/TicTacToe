<dialogs:CustomDialog x:Class="TickTackToe.Views.GameSizeDialog"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      mc:Ignorable="d"
                      Width="525">
    <dialogs:CustomDialog.DialogTop>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="25" Text="Select game size."/>
    </dialogs:CustomDialog.DialogTop>
    <Grid Width="525" Margin="-10,0,0,0">
        <StackPanel Orientation="Horizontal"  >
            <Button Height="70" Width="70" Content="3" Margin="0,0,30,20" FontSize="30"  Command="{Binding SelectSize}" CommandParameter="3" />
            <Button Height="70" Width="70" Content="4"  Margin="0,0,30,20" FontSize="30" Command="{Binding SelectSize}" CommandParameter="4" />
            <Button Height="70" Width="70" Content="5" Margin="0,0,0,20" FontSize="30"  Command="{Binding SelectSize}" CommandParameter="5" />
        </StackPanel>
    </Grid>

</dialogs:CustomDialog>